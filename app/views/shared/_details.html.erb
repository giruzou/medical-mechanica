<!-- hidden buttons !!!important don't remove this !!! -->
<div id="form-add" style="visibility: hidden;">
  <%= form.link_to_add "", :parts, "data-target" => "#parts" %>
</div>

<div id="parts">
  <%= form.fields_for :parts do |f|%>
    <div class="panel fields">
      <%= f.hidden_field :x, :class => 'pointX' %>
      <%= f.hidden_field :y, :class => 'pointY' %>
      <div class="left">

        <%= f.link_to_remove do %>
          Ã—
        <% end %>

        <%= f.text_field :part, :class => 'progress-part', :readonly => true %>
      </div>

      <div class="progress-kind">
        <%= f.select :kind, options_for_select( Part.kinds.collect{ |s| [s[0].humanize, s[0]] } ,:selected => f.object.kind ) %>
      </div>

      <div>
        <%= f.range_field :level,:in => 1..5, :step => '1', :class => 'progress-level' %>
      </div>

      <div>
        <%= f.text_field :memo, :class => 'progress-memo' %>
      </div>

      <div style="clear:both"></div>
    </div>
  <% end %>
</div>
