<div CLASS="container">
<h3>
    <div class="pull-left">
        <%= image_tag @user.image_url, :class => 'original-icon' %>
    </div>
    <div class="">
        <%= @user.nickname %>さんの記録
    </div>
</h3>
<div>
    <% if @user.has_twitter? %>
        <a href="https://twitter.com/<%=@user.nickname%>" target="_blank"><%=@user.nickname%>さんのTwitter</a>
    <% end %>
    <% if @user.has_facebook? %>
        <a href="<%=@user.facebook_url%>" target="_blank"><%=@user.nickname%>さんのFacebook</a>
    <% end %>
</div>

<div class="description">
    <% if @symptoms.count==0 %>
        まだ1件も記録がありません。<br>
        <br>
    <% else %>
        <%= render partial: 'symptoms', locals: {user: @user, symptoms: @symptoms} %>
    <% end %>
    <div class="col-xs-12 col-md-4">
        <%= link_to '記録する', new_user_symptom_path(current_user.id), class:'btn btn-success btn-lg btn-block' %>
    </div>
</div>

</div>

